{
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "plugins": [
        "prettier",
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "rules": {
        "no-shadow": "error",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ]
    }
}